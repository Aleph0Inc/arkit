{
  "$schema": "https://arkit.js.org/schema.json",
  "components": [
    {
      "type": "Entry",
      "patterns": ["*.js"]
    },
    {
      "type": "Shared",
      "patterns": ["src/shared"]
    },
    {
      "type": "Component",
      "patterns": ["src/**/*.js"],
      "excludePatterns": ["**/__tests__/**", "**/*-test.js"]
    }
  ],
  "output": {
    "path": "arkit.svg",
    "groups": [
      {
        "first": true,
        "components": ["Entry"],
        "patterns":  ["index.js", "server.js"]
      },
      {
        "type": "Event",
        "patterns": ["src/events/**/*Event.*"]
      },
      {
        "type": "Client",
        "patterns": ["src/client/**"]
      },
      {
        "type": "Server",
        "patterns": ["src/server/**"]
      },
      {
        "components": ["Component", "Entry", "Shared"]
      }
    ]
  }
}
